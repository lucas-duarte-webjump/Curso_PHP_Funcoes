{
  "name": "lucas-duarte-webjump/buscador-cursos",
  "description": "Projeto que busca cursos no site do alura",
  "type": "library",
  "autoload": {
    "files": [
      "./functions.php"
    ],
    "psr-4": {
      "LucasDuarteWebjump\\BuscadorCursos\\": "src/"
    }
  },
  "authors": [
    {
      "name": "Lucas Duarte",
      "email": "lucas.goes@webjump.com.br"
    }
  ],
  "require": {
    "guzzlehttp/guzzle": "^7.3",
    "symfony/dom-crawler": "^5.3",
    "symfony/css-selector": "^5.3"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "squizlabs/php_codesniffer": "^3.6",
    "phan/phan": "^4.0"
  },
  "scripts": {
    "phan": "phan --allow-polyfill-parser",
    "cs": "phpcs --standard=PSR12 src/",
    "check": [
      "@phan",
      "@cs"
    ]
  },
  "scripts-descriptions": {
    "check": "Roda as verificações do código phan e cs"
  }
}
